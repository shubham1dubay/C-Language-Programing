#define COL 3
#define ROW 3
#include<stdio.h>
int main()
{
	int i,j,mat1[ROW] [COL],mat2[ROW] [COL],mat3[ROW] [COL];
	printf(" Mat1 Input Number Addtion matrix (%dx%d) ROW-WISE:\n",ROW,COL);
	for(i=0;i<ROW;i++)
	for(j=0;j<COL;j++)
	scanf("%d",&mat1[i][j]);
	printf("Mat2 Input Number Addtion matrix (%dx%d) ROW-WISE :\n",ROW,COL);
	for(i=0;i<ROW;i++)
	for(j=0;j<COL;j++)
	scanf("%d",&mat2[i][j]);
	printf("Addtion in mat1 and mat2 \n");
	for(i=0;i<ROW;i++)
	for(j=0;j<COL;j++)
	mat3[i][j]=mat1[i][j]+mat2[i][j];
	printf("Output Number of Mat3 \n");
	for(i=0;i<ROW;i++)
	{
		for(j=0;j<COL;j++)
		printf("%5d",mat3[i][j]);
		printf("\n");
	}

	return 0;
}
